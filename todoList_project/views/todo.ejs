<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>Todo list</title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet" />
        <!-- <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script> -->
        <!--<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script> -->
        <link rel="stylesheet" href="/assets/styles.css" type="text/css" />
        <script type="text/javascript" src="/assets/todo-list.js"></script>
    </head>
    <body>
        <div class="page-content page-container" id="page-content">
            <div class="padding">
                <div class="row container d-flex justify-content-center">
                    <div class="col-lg-12">
                        <div class="card px-3">
                            <div id="todo-table" class="card-body">
                                <h4 class="card-title">Todo list</h4>
                                <form action="">
                                    <div class="add-items d-flex">
                                        <input type="text" name="item" class="form-control todo-list-input" placeholder="What do you need to do today?" required />
                                        <button type="submit" class="add btn btn-primary font-weight-bold todo-list-add-btn">Add</button>
                                    </div>
                                </form>

                                <div class="list-wrapper">
                                    <ul class="d-flex flex-column-reverse todo-list">
                                        <% for(var i=0; i < todos.length; i++){ %>
                                        <li>
                                            <div class="form-check">
                                                <label class="form-check-label"> <input class="checkbox" name="todoItem" id="checkbox" type="checkbox" <%= todos[i].completed ? "checked" : "" %> value="<%= todos[i].item %>" /> <%= todos[i].item %> <i class="input-helper"></i></label>
                                            </div>
                                            <i class="remove mdi mdi-close-circle-outline" id="remove"></i>
                                        </li>
                                        <% } %>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
